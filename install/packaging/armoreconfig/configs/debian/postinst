#!/bin/sh
# postinst script for armoreconfig
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    configure)
        bash /etc/armore/armorenetworkcfg.sh
        bash /etc/armore/armoreproxycfg.sh

        #overwrite and enable dnp3 modbus broconfig with default config
        cp /etc/armore/configs/local.bro /etc/bro/site
        echo "export BRO_PLUGIN_PATH=/usr/share/bro/plugins" >> /usr/share/broctl/scripts/set-bro-path

       
        ##Replace Bro Interface in BroConfig
        BROINTERFACE="$(cat /etc/armore/proxycfg | grep Interface\ = | sed 's/Interface\ =//' | sed 's/ //')"
        echo $BROINTERFACE
        sed -i s/eth0/$BROINTERFACE/ /etc/bro/node.cfg
        
        broctl install

        whiptail --title "ARMOREnode Installation Complete" --msgbox\
            "Please restart your system" 8 70



    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
